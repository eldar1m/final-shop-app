<div id="cart-drawer" class="cart-drawer">
  <div class="cart-drawer-overlay"></div>
  <div class="cart-header">
    <h2>Your Cart</h2>
    <button class="close-cart">×</button>
  </div>

  <hr class="divider">

  <div class="cart-items">
    {% for item in cart.items %}
      <div class="cart-item">
        <img src="{{ item.image | img_url: 'medium' }}" alt="{{ item.product.title }}">
        <div class="item-details">
          <div class="item-title">{{ item.product.title }}</div>
          <div class="item-variant">{{ item.variant.title }}</div>
          <div class="item-price">{{ item.line_price | money }}</div>
        </div>
        <div class="item-qty">
          <button class="qty-btn" onclick="updateQty({{ item.variant.id }}, -1)">‹</button>
          <span>{{ item.quantity }}</span>
          <button class="qty-btn" onclick="updateQty({{ item.variant.id }}, 1)">›</button>
        </div>
        <button class="remove-item" onclick="removeItem({{ item.variant.id }})">×</button>
      </div>
    {% endfor %}
  </div>

  <div class="cart-footer">
    <div class="total">
      <span>Total:</span>
      <span>{{ cart.total_price | money }}</span>
    </div>
    <a href="/checkout" class="checkout-btn">Checkout</a>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var cartDrawer = document.getElementById('cart-drawer');
    var cartIcon = document.getElementById('cart-icon');
    var overlay = document.querySelector('.cart-drawer-overlay');

    // Open cart on cart icon click
    cartIcon.addEventListener('click', function () {
      cartDrawer.classList.add('active');
      overlay.classList.add('active');
    });

    // Close cart when clicking overlay
    overlay.addEventListener('click', function () {
      cartDrawer.classList.remove('active');
      overlay.classList.remove('active');
    });

    // Optional: Close cart if clicking outside cart content
    document.addEventListener('click', function (event) {
      if (cartDrawer.classList.contains('active')) {
        // If click is outside the cart drawer content
        if (!cartDrawer.contains(event.target) && !cartIcon.contains(event.target)) {
          cartDrawer.classList.remove('active');
          overlay.classList.remove('active');
        }
      }
    });
  });
</script>
