<section class="category-section">
  <div class="category-background-clip"></div>
  <div class="category-section__inner">
    <div class="category-section__header">
      <h2 class="category-section__title">{{ section.settings.heading }}</h2>
      <p class="category-section__subtext">{{ section.settings.subtext }}</p>
    </div>
    <div class="category-grid">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection %}
          <a
            href="{{ collection.url }}"
            class="category-card"
            style="background-image: url({{ collection.image | img_url: '800x' }});"
          >
            <div class="category-card__overlay">
              <div class="category-card__title">
                {{ collection.title | upcase }}
              </div>
              <div class="category-card__count">{{ collection.products_count }} PRODUCTS</div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Categories",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Categories"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Pick a category you need"
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Shop by Categories",
      "category": "Custom",
      "blocks": [
        {
          "type": "collection_block",
          "settings": {
            "collection": "women"
          }
        },
        {
          "type": "collection_block",
          "settings": {
            "collection": "men"
          }
        },
        {
          "type": "collection_block",
          "settings": {
            "collection": "kids"
          }
        }
      ]
    }
  ]
}
{% endschema %}
