<section class="latest-news">
  <div class="latest-news__header">
    <h2>LATEST NEWS</h2>
    <p>
      Nunc rhoncus auctor risus tempor lacus urna, id laoreet sed. Euismod nisl pellentesque risus cursus fringilla
      tincidunt volutpat, non.
    </p>
  </div>

  <div class="custom-swiper latest-news-swiper">
    <div class="custom-swiper-wrapper">
      {% for article in blogs.news.articles reversed limit: 6 %}
        <div class="custom-swiper-slide">
          <div class="latest-news__card">
            <div class="latest-news__image">
              <a href="{{ article.url }}" class="latest-news__unit">
                <img src="{{ article.image | img_url: '600x' }}" alt="{{ article.title }}">
              </a>
            </div>
            <div class="latest-news__meta">
              <p class="latest-news__date">{{ article.published_at | date: '%b %d, %Y' }}</p>
              <h3 class="latest-news__title">{{ article.title }}</h3>
              <a href="{{ article.url }}" class="latest-news__read">
                Read More
                <span class="icon-arrow-right">{% render 'icon-arrow-right' %}</span>
              </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="custom-swiper-pagination"></div>
  </div>

  <div class="carousel-section">
    <div class="carousel">
      <div class="carousel-overlay">
        <div class="social">
          <span class="social-name">@{{ shop.name }}</span>
          <span class="social-icon">{% render 'icon-instagram' %}</span>
        </div>
      </div>
      {% for block in section.blocks %}
        <div class="carousel-image">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% comment %}
  <script>
    new Swiper('.latest-news-swiper', {
      wrapperClass: 'custom-swiper-wrapper',
      slideClass: 'custom-swiper-slide',
      pagination: {
        el: '.custom-swiper-pagination',
        clickable: true,
      },
      loop: false,
      slidesPerView: 3,
      spaceBetween: 30,
      breakpoints: {
        768: {
          slidesPerView: 2,
        },
        480: {
          slidesPerView: 1,
        },
      },
    });
  </script>
{% endcomment %}

{% schema %}
{
  "name": "Latest News",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest News"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Nunc rhoncus auctor risus tempor lacus urna, id laoreet sed. Euismod nisl pellentesque risus cursus fringilla tincidunt volutpat, non."
    }
  ],
  "blocks": [
    {
      "type": "Image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 14,
  "presets": [
    {
      "name": "Latest News",
      "category": "Custom"
    }
  ]
}
{% endschema %}
