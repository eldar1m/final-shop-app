  "name": "Footer",
  "limit": 1,
  "max_blocks": 4,
  "blocks": [
    {
      "type": "logo_column",
      "name": "Logo Column",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text_below_logo",
          "label": "Text below logo",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
        },
        {
          "type": "url",
          "id": "facebook_url",
          "label": "Facebook URL"
        },
        {
          "type": "url",
          "id": "vimeo_url",
          "label": "Vimeo URL"
        },
        {
          "type": "url",
          "id": "instagram_url",
          "label": "Instagram URL"
        },
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter URL"
        }
      ]
    },
    {
      "type": "information_column",
      "name": "Information Column",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section title",
          "default": "Information"
        },
        {
          "type": "text",
          "id": "link_label_1",
          "label": "Link 1 label",
          "default": "About Miralou"
        },
        {
          "type": "url",
          "id": "link_url_1",
          "label": "Link 1 URL"
        },
        {
          "type": "text",
          "id": "link_label_2",
          "label": "Link 2 label",
          "default": "FAQ"
        },
        {
          "type": "url",
          "id": "link_url_2",
          "label": "Link 2 URL"
        },
        {
          "type": "text",
          "id": "link_label_3",
          "label": "Link 3 label",
          "default": "Contact Us"
        },
        {
          "type": "url",
          "id": "link_url_3",
          "label": "Link 3 URL"
        }
      ]
    },
    {
      "type": "quick_links_column",
      "name": "Quick Links Column",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section title",
          "default": "Quick Links"
        },
        {
          "type": "url",
          "id": "wishlist_url",
          "label": "Wishlist URL"
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Contact us"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
