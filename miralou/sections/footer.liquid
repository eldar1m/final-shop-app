<footer class="footer">
  <div class="footer__blocks page-width">
    {% for block in section.blocks %}
      <div class="footer__block footer__block--{{ block.type }}">
        {% case block.type %}
          {% when 'logo_column' %}
            <div class="footer-column footer-logo-block">
              {% if settings.logo_image %}
                <div class="footer-logo-wrapper">
                  <img
                    src="{{ settings.logo_image | image_url: width: 300 }}"
                    alt="{{ shop.name }}"
                    class="footer-logo"
                    loading="lazy"
                  >
                </div>
              {% endif %}

              <div class="footer-logo-text">
                {{ block.settings.text_below_logo }}
              </div>

              <div class="footer-social-icons">
                {% if block.settings.facebook_url != blank %}
                  <a href="{{ block.settings.facebook_url }}" target="_blank" rel="noopener" aria-label="Facebook">
                    {% render 'icon-facebook' %}
                  </a>
                {% endif %}
                {% if block.settings.vimeo_url != blank %}
                  <a href="{{ block.settings.vimeo_url }}" target="_blank" rel="noopener" aria-label="Vimeo">
                    {% render 'icon-vimeo' %}
                  </a>
                {% endif %}
                {% if block.settings.instagram_url != blank %}
                  <a href="{{ block.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">
                    {% render 'icon-instagram' %}
                  </a>
                {% endif %}
                {% if block.settings.twitter_url != blank %}
                  <a href="{{ block.settings.twitter_url }}" target="_blank" rel="noopener" aria-label="Twitter">
                    {% render 'icon-twitter' %}
                  </a>
                {% endif %}
              </div>
            </div>
          {% when 'information_column' %}
            <div class="footer-column">
              <h3 class="footer-title">{{ block.settings.title | upcase }}</h3>
              <ul class="footer-links">
                {% if block.settings.link_label_1 != blank and block.settings.link_url_1 != blank %}
                  <li class="footer-item">
                    <a href="{{ block.settings.link_url_1 }}">{{ block.settings.link_label_1 }}</a>
                  </li>
                {% endif %}
                {% if block.settings.link_label_2 != blank and block.settings.link_url_2 != blank %}
                  <li class="footer-item">
                    <a href="{{ block.settings.link_url_2 }}">{{ block.settings.link_label_2 }}</a>
                  </li>
                {% endif %}
                {% if block.settings.link_label_3 != blank and block.settings.link_url_3 != blank %}
                  <li class="footer-item">
                    <a href="{{ block.settings.link_url_3 }}">{{ block.settings.link_label_3 }}</a>
                  </li>
                {% endif %}
              </ul>
            </div>
          {% when 'quick_links_column' %}
            <div class="footer-column">
              <h3 class="footer-title">{{ block.settings.title | upcase }}</h3>
              <ul class="footer-links">
                <li class="footer-item"><a href="{{ block.settings.wishlist_url }}">Wishlist</a></li>
                <li class="footer-item"><a href="{{ routes.checkout_url }}">Checkout</a></li>
                <li class="footer-item"><a href="{{ routes.cart_url }}">Cart</a></li>
              </ul>
            </div>
          {% when 'contact' %}
            <div class="footer-column">
              <h3 class="footer-title">{{ block.settings.title | upcase }}</h3>
              <ul class="footer-contact-list">
                <li class="footer-item">
                  <span class="footer-icon"> {% render 'icon-location' %}</span>
                  <span class="footer-item-text">{{ settings.address }}</span>
                </li>
                <li class="footer-item">
                  <span class="footer-icon"> {% render 'icon-phone' %}</span>
                  <span class="footer-item-text">{{ settings.phone }}</span>
                </li>
                <li class="footer-item">
                  <span class="footer-icon"> {% render 'icon-email' %}</span>
                  <span class="footer-item-text">{{ settings.email }}</span>
                </li>
              </ul>
            </div>
        {% endcase %}
      </div>
    {% endfor %}
  </div>

  <div class="footer__bottom">
    <div class="footer__bottom-inner">
      <span
        >Copyright &copy; {{ 'now' | date: '%Y' }}
        {{ shop.name -}}
      </span>
      <span>All rights reserved</span>
    </div>
  </div>
</footer>

{% schema %}
