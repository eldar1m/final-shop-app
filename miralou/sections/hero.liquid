<section
  class="hero-section"
  style="background-image: url({{ section.settings.background_image | img_url: 'master' }});"
>
  <div class="hero-overlay">
    <div class="hero-content">
      <h1 class="hero-title">{{ section.settings.heading }}</h1>
      <p class="hero-subtext">{{ section.settings.subtext }}</p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
    {% if section.settings.shoe_image %}
      <img src="{{ section.settings.shoe_image | img_url: 'master' }}" alt="Shoe" class="hero-shoe">
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Hero Section",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Choose your shoes with us."
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "We will help you to choose the product that without the doubt suits you best. And we mean it"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Read More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "shoe_image",
      "label": "Main Shoe Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
